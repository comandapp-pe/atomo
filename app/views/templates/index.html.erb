<h1>Templates</h1>

<div class="container">
  <% @templates.each do |template| %>
    <div class="row">
      <div class="col">
        <div class="card">
          <img src="" class="card-img-top" alt="Template test preview">
          <div class="card-body d-grid">
            <h5 class="card-title"><%= template.name %></h5>
            <p class="card-text"><%= template.description %></p>
            <%= link_to 'Details', template, class: 'btn btn-outline-primary' %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

