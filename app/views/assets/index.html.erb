<p id="notice"><%= notice %></p>

<h1>Assets</h1>

<%= form_with url: "/orders/#{@order.id}/assets", method: :post do |form| %>
  <div class="form-group">
    <%= form.label :assets %>
    <%= form.file_field :assets, class: 'form-control-file' %>
  </div>

  <div>
    <%= form.submit class: 'btn btn-primary mt-3' %>
  </div>
<% end %>

<% @assets.each do |asset| %>
  <% if asset.representable? %>
    <video controls preload="auto">
      <source src=<%= rails_blob_path asset %> type="video/mp4">
    </video>
  <% else %>
    <p><%= asset.to_json %> Not representable.</p>
  <% end %>
<% end %>

