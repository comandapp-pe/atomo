<%= render 'admin/header' %>

<main class="container p-4">
  <% if notice %>
    <div id="notice" class="alert alert-success alert-dismissible fade show">
      <%= notice %><button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <div class="mb-3">
    <%= link_to '< Regresar', admin_categories_path, class: 'text-decoration-none' %>
  </div>

  <div class="card">
    <div class="card-header">
      <h1 class="h3"><%= @category.name_in_database %></h1>
    </div>
    <div class="card-body">
      <%= render 'form', category: @category %>
    </div>
  </div>
</main>
