<%= render 'admin/header' %>
<main class="container px-4">
	<% if notice %>
		<div id="notice" class="alert alert-success alert-dismissible fade show">
			<%= notice %> <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
		</div>
	<% end %>
	<div>
		<%= link_to 'Crear Pregunta Frecuente', new_admin_faq_path, class: 'btn btn-primary' %>
	</div>
	<br>
	<div class="card">
		<h1 class="card-header h3">Preguntas Frecuentes</h1>
		<div class="card-body">
			<% if @faqs.empty? %>
				<div class="alert alert-primary mb-0">
					No hay datos disponibles.
					<hr>
					Crea una Pregunta Frecuente.
				</div>
			<% else %>
				<div class="row gy-3">
					<% @faqs.each do |faq| %>
						<div class="col-12">
							<%= link_to [:admin, faq], class: 'card text-decoration-none' do %>
								<div class="card-body">
									<div class="card-title"><%= faq.question %></div>
									<div class="card-subtitle text-muted"><%= faq.answer %></div>
								</div>
							<% end %>
						</div>
					<% end %>
				</div>
			<% end %>
		</div>
	</div>
</main>
<%= render 'admin/footer' %>
