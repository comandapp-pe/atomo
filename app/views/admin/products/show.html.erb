<main class="d-flex">
  <div class="d-flex flex-column flex-shrink-0 p-3 bg-light" style="height: 100vh; width: 256px;">
    <a href="#" class="d-flex align-items-center pb-3 mb-3 link-dark text-decoration-none border-bottom">
      <svg class="bi me-2" width="30" height="24">
        <use xlink:href="#bootstrap">
          <svg id="bootstrap" viewBox="0 0 118 94"><title>Bootstrap</title>
            <path fill-rule="evenodd" clip-rule="evenodd" d="M24.509 0c-6.733 0-11.715 5.893-11.492 12.284.214 6.14-.064 14.092-2.066 20.577C8.943 39.365 5.547 43.485 0 44.014v5.972c5.547.529 8.943 4.649 10.951 11.153 2.002 6.485 2.28 14.437 2.066 20.577C12.794 88.106 17.776 94 24.51 94H93.5c6.733 0 11.714-5.893 11.491-12.284-.214-6.14.064-14.092 2.066-20.577 2.009-6.504 5.396-10.624 10.943-11.153v-5.972c-5.547-.529-8.934-4.649-10.943-11.153-2.002-6.484-2.28-14.437-2.066-20.577C105.214 5.894 100.233 0 93.5 0H24.508zM80 57.863C80 66.663 73.436 72 62.543 72H44a2 2 0 01-2-2V24a2 2 0 012-2h18.437c9.083 0 15.044 4.92 15.044 12.474 0 5.302-4.01 10.049-9.119 10.88v.277C75.317 46.394 80 51.21 80 57.863zM60.521 28.34H49.948v14.934h8.905c6.884 0 10.68-2.772 10.68-7.727 0-4.643-3.264-7.207-9.012-7.207zM49.948 49.2v16.458H60.91c7.167 0 10.964-2.876 10.964-8.281 0-5.406-3.903-8.178-11.425-8.178H49.948z"></path>
          </svg>
        </use>
      </svg>
      <span class="fs-5 fw-semibold">Átomo</span>
    </a>
    <ul class="nav nav-pills flex-column pb-3 mb-3 border-bottom">
      <li><%= link_to 'Órdenes', admin_orders_path, class: 'nav-link link-dark' %></li>
      <li><%= link_to 'Productos', admin_products_path, class: 'nav-link link-dark' %></li>
    </ul>
    <ul class="nav nav-pills flex-column pb-3 mb-3 mb-auto border-bottom">
      <li><%= button_to 'Cerrar sesión', admin_session_path, method: :delete, class: 'nav-link link-dark' %></li>
    </ul>
  </div>

  <section class="container-fluid p-4" style="max-height: 100vh; overflow: scroll;">
    <% if notice %>
      <div id="notice" class="alert alert-success alert-dismissible fade show">
        <%= notice %> <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% end %>

    <div class="mb-2">
      <%= link_to '< Regresar', admin_products_path, class: 'text-decoration-none' %>
    </div>

    <h1><%= @product.name %></h1>

    <%= form_with model: @product, url: [:admin, @product], class: 'my-3' do |form| %>
      <% if @product.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@product.errors.count, "error") %> evitó guardar este producto:</h2>

          <ul>
            <% @product.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-2">
        <%= form.label :vimeo_url, 'URL de Vimeo', class: 'form-label' %>
        <%= form.text_field :vimeo_url, class: 'form-control', disabled: true %>
      </div>

      <div class="mb-2">
        <%= form.label :checkout_code, 'Código de 2Checkout', class: 'form-label' %>
        <%= form.text_field :checkout_code, class: 'form-control', disabled: true %>
      </div>

      <div class="mb-2">
        <%= form.label :name, 'Nombre', class: 'form-label' %>
        <%= form.text_field :name, class: 'form-control' %>
      </div>

      <div class="mb-2">
        <%= form.label :description, 'Descripción', class: 'form-label' %>
        <%= form.text_field :description, class: 'form-control' %>
      </div>

      <div class="mb-2">
        <%= form.label :published, 'Publicado', class: 'form-label' %>
        <%= form.select :published, [['Sí', true], ['No', false]], {}, class: 'form-select' %>
      </div>

      <%= form.submit class: 'btn btn-primary mt-3' %>
    <% end %>

    <h2>Prevista</h2>

    <div class="mt-3">
      <%= @product.preview_html.html_safe %>
    </div>
  </section>
</main>
