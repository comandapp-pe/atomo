<%= render 'admin/header' %>

<main class="container p-4">
  <% if notice %>
    <div id="notice" class="alert alert-success alert-dismissible fade show">
      <%= notice %> <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <div>
    <%= link_to 'Crear Producto', new_admin_product_path, class: 'btn btn-primary' %>
  </div>

  <br>

  <div class="card">
    <h1 class="card-header h3">Productos</h1>

    <div class="card-body">
      <% if @products.empty? %>
        <div class="alert alert-primary mb-0">
          No hay datos disponibles.
          <hr>
          Crea un producto.
        </div>
      <% else %>
        <div class="grid row g-2" data-masonry='{"percentPosition": true}'>
          <% @products.each do |product| %>
            <%= link_to [:admin, product], class: 'col-12 col-sm-6 col-md-4 col-lg-3 text-decoration-none wrap' do %>
              <div class="card" role="button">
                <img class="img-fluid" src="https://vumbnail.com/<%= product.vimeo_url.split('/').last %>.jpg">
                <div class="card-body text-center">
                  <h5 class="card-title"><%= product.name %></h5>
                  <div class="card-subtitle text-muted">
                    <% if product.category_id? %>
                      <span><%= product.category.name %></span>
                    <% else %>
                      <span>Sin categor√≠a</span>
                    <% end %>
                  </div>
                  <div class="card-text text-muted">
                    <%= product.published ? 'Publicado' : 'No publicado' %>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</main>

<script>
    setTimeout(function () {
        var msnry = new Masonry('.grid');
        msnry.layout();
    }, 100);

    setTimeout(function () {
        var msnry = new Masonry('.grid');
        msnry.layout();
    }, 300);

    setTimeout(function () {
        var msnry = new Masonry('.grid');
        msnry.layout();
    }, 1000);

    setTimeout(function () {
        var msnry = new Masonry('.grid');
        msnry.layout();
    }, 2500);

    setTimeout(function () {
        var msnry = new Masonry('.grid');
        msnry.layout();
    }, 5000);
</script>
