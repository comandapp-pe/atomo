<%= link_to [:admin, product], class: 'text-decoration-none', data: { empty_state_target: 'item' } do %>
	<div class="card">
		<div class="card-body d-flex">
			<div class='card border-0 d-flex justify-content-center align-items-center' style='width: 150px; height: 150px'>
				<img height='100%' src="https://vumbnail.com/<%= product.vimeo_url.split('/').last %>.jpg">
			</div>
			<div class='d-flex flex-column'>
				<h5 class="card-title"><%= product.name %></h5>
				<div class="card-subtitle text-muted">
					<% if product.category_id? %>
						<span><%= product.category.name %></span>
					<% else %>
						<span>Sin categor√≠a</span>
					<% end %>
				</div>
				<% if product.published %>
					<div class="card-text text-success">Publicado</div>
				<% else %>
					<div class="card-text text-danger">No publicado</div>
				<% end %>
			</div>
		</div>
	</div>
<% end %>
