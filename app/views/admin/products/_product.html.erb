<%= link_to [:admin, product], class: 'col-12 col-sm-6 col-md-4 col-lg-3 text-decoration-none p-1', data: { empty_state_target: 'item' } do %>
  <div class="card">
    <img class="img-fluid" src="https://vumbnail.com/<%= product.vimeo_url.split('/').last %>.jpg">

    <div class="card-body text-center">
      <h5 class="card-title"><%= product.name %></h5>

      <div class="card-subtitle text-muted">
        <% if product.category_id? %>
          <span><%= product.category.name %></span>
        <% else %>
          <span>Sin categor√≠a</span>
        <% end %>
      </div>

      <% if product.published %>
        <div class="card-text text-success">Publicado</div>
      <% else %>
        <div class="card-text text-danger">No publicado</div>
      <% end %>
    </div>
  </div>
<% end %>